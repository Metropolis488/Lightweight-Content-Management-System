<div class="jumbotron text-center">
  <h1>My First Bootstrap Page</h1>
  <p>Resize this responsive page to see the effect!</p>
</div>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top justify-content-center">
  <ul class="navbar-nav">
      <li class="nav-item">
      <a class="nav-link" href="/admin">Admin Page</a>
    </li>
  </ul>
</nav>
<br>
<div class="container">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      
        {{#each blogs}}
        <div class="card w-25 p-3 bg-primary">
          <div class="card-body" type="submit" data-id="{{this.id}}" class="goTo">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.abstract}}</p>
            <p class="card-text">{{this.author}}</p>
            <button type="submit" data-id="{{this.id}}" class="goTo">Read</button> <br>
          </div>
        </div>
        {{/each}}

</div>
<div class="col-sm-2"></div>
</div>
</div>